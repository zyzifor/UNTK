FUNCTION prociombSets
(* ------------------------------------------------------------------------------------------------------------------ *)
(* Name                Data Type      Dimension            Direction  Attribute       Comment                         *)
(* ------------------------------------------------------------------------------------------------------------------ *)
(* prociombSets        BOOL                                VarOutput  Write           Результат выполнения функции *)
(* nWr                 BOOL                                VarInput   Read            true - Запись из Modbus в ПЛК/false - чтение из ПЛК в Modbus *)
(* iData               WORD          [0...0,0...99]        Var        Read/Write      Массив промежуточных данных *)
(* iWord               WORD          [0...1]               Var        Read/Write      Массив промежуточных данных WORD *)
(* iReal               REAL          [0...0]               Var        Read/Write      Массив промежуточных данных REAL *)
(* j                   DINT                                Var        Read/Write      Счётчик *)
(* m                   DINT                                Var        Read/Write      Номер в массиве iodMBP_4x[m].regs[n] *)
(* n                   DINT                                Var        Read/Write      Номер в массиве iodMBP_4x[m].regs[n] *)
(* ------------------------------------------------------------------------------------------------------------------ *)
prociombSets:= sSets.iSize;
if sSets.iSize>sSets.iMax then prociombSets:= -sSets.iSize; return; end_if;
(* ------------------------------------------------------------------------------------------------------------------ *)
(* Проход по всем параметрам *)
i:= 1;   while i<=sSets.iSize do
(* ------------------------------------------------------------------------------------------------------------------ *)
(* Передача в Рабочий объект *)
  iSets:= dSets[i];
(* ------------------------------------------------------------------------------------------------------------------ *)
(* Проверка *)
  if sSets.mbSize<=0 or
     mbSets[i, 0]<0 or mbSets[i, 0]>64 or mbSets[i, 1]<1 or mbSets[i, 1]>1024 then
     prociombSets:= -2;
  end_if;
  (* Считывание настроечных данных *)
  m:= ANY_TO_DINT(mbSets[i, 0]); n:= ANY_TO_DINT(mbSets[i, 1]);
(* ------------------------------------------------------------------------------------------------------------------ *)
(* Чтение данных из Modbus в ПЛК *)
  if nWr Then
    iSets.wrCRC:= CRC16ForModbusRegs(iodMBP_4x, m, n, sSets.mbSize);
    if iSets.wrCRC<>iSets.rdCRC then
      iSets.wrCount:= iSets.wrCount+1; if iSets.wrCount>1000000 then iSets.wrCount:= 1; end_if;
      _dRes:= SafeCopyFromModbusREGsArray(iodMBP_4x, iData, m, n, 0, 0, sSets.mbSize);
  (* ----------------------------------------------------------- *)
      iSets.operCode    :=             iData[0,    0];                                     (* Код операции *)  
    end_if;
(* ------------------------------------------------------------------------------------------------------------------ *)
(* Чтение данных из Modbus в ПЛК *)
  else
  (* ----------------------------------------------------------- *)
    iData[0,    0]    :=             iSets.operCode;                                     (* Код операции *)  
  (* ----------------------------------------------------------- *)
    iData[0,    1]    := GetWordFromDWord(ANY_TO_DWORD(iSets.resFileRead), 0);           (* Результат чтения файла Low Word *)
    iData[0,    2]    := GetWordFromDWord(ANY_TO_DWORD(iSets.resFileRead), 1);           (* Результат чтения файла Hi Word *)
  (* ----------------------------------------------------------- *)
    iData[0,    3]    := GetWordFromDWord(ANY_TO_DWORD(iSets.resFileWrite), 0);          (* Результат записи файла Low Word *)
    iData[0,    4]    := GetWordFromDWord(ANY_TO_DWORD(iSets.resFileWrite), 1);          (* Результат записи файла Hi Word *)
(* ------------------------------------------------------------------------------------------------------------------ *)
    _dRes:= SafeCopyToModbusREGsArray(iData, iodMBP_4x, 0, 0, m, n, sSets.mbSize);
    iSets.rdCRC:= CRC16ForModbusRegs(iodMBP_4x, m, n, sSets.mbSize);
  end_if;
(* ------------------------------------------------------------------------------------------------------------------ *)
(* Передача из Рабочего объекта *)
  dSets[i]:= iSets;
i:= i+1; end_while;
END_FUNCTION
